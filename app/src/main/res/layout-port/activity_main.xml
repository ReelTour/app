<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/waiting_screen_pane"
    android:padding="0dp">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageBgWelcomeScreen"
        android:background="#000" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/box_with_border">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageView3"
                android:src="@drawable/logo_with_name"
                android:scaleType="fitCenter"
                android:layout_weight="0.3"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

            <TextView android:text="@string/welcome_home_string" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/room_item_margin"
                android:layout_weight="0.7"
                android:textIsSelectable="false"
                android:singleLine="false"
                android:phoneNumber="false"
                android:password="false"
                android:textSize="32sp"
                android:textColor="#000"
                 />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
