<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="gaftech.reeltour.SelectRoomActivity"
    android:background="@drawable/gui_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
       >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/roomText"
            android:hint="@string/roomTextLabel"
            android:background="@drawable/blue_bottom_border"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"
            android:textColorHint="#888"
            android:textCursorDrawable="@null" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/room_item_margin">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="0.5">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/record_review_btn_label"
                    android:id="@+id/record_review_btn"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/load_from_videos_list_btn_label"
                    android:id="@+id/loadRoomFromVideosBtn"
                    android:layout_marginTop="@dimen/button_topbottom_margin" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/room_video_preview_btn_label"
                android:id="@+id/room_video_preview_btn"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_weight="0.5"
                android:layout_marginLeft="@dimen/button_topbottom_margin" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prev_room_btn_label"
                android:id="@+id/prev_room_btn"
                android:layout_marginTop="@dimen/button_topbottom_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginRight="@dimen/button_topbottom_margin" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next_room_btn_label"
                android:id="@+id/next_room_btn"
                android:layout_marginTop="@dimen/button_topbottom_margin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginRight="@dimen/button_topbottom_margin" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_room_btn_label"
                android:id="@+id/delete_room_btn"
                android:layout_marginTop="@dimen/button_topbottom_margin"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_room_btn_label"
            android:id="@+id/end_room_btn"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginTop="@dimen/room_item_margin" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView6"
            android:src="@drawable/logo"
            android:scaleType="fitCenter" />
    </LinearLayout>
</RelativeLayout>
