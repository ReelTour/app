<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="gaftech.reeltour.CreateTourActivity"
        android:id="@+id/scrollView"
    android:background="@drawable/gui_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:scrollbars="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addressText"
            android:hint="@string/tour_address_field_lavel"
            android:layout_marginBottom="@dimen/room_item_margin"
            android:background="@drawable/blue_bottom_border"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"
            android:textColorHint="#888"
            android:textCursorDrawable="@null" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_gravity="left">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/take_bg_pic_btn_label"
                    android:id="@+id/take_bg_pic_btn"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pick_bg_from_gallery_btn_label"
                    android:id="@+id/pickBgFromGalleryBtn"
                    android:layout_marginTop="@dimen/button_topbottom_margin" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/bg_image_preview_btn_label"
                android:id="@+id/bgImagePreviewBtn"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_weight="0.5"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/button_topbottom_margin"
                android:enabled="true"
                android:focusable="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/button_topbottom_margin">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="0.5">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/record_greetings_btn_label"
                    android:id="@+id/record_greetings_btn"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/load_from_videos_list_btn_label"
                    android:id="@+id/loadFromVideosBtn"
                    android:layout_marginTop="@dimen/button_topbottom_margin" />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/greetings_video_preview_btn_label"
                android:id="@+id/greetingsVideoPreviewBtn"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_weight="0.5"
                android:layout_marginLeft="@dimen/button_topbottom_margin" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reviewSaveLabel"
                    android:id="@+id/reviewSaveLabel"
                    android:layout_marginTop="@dimen/room_item_margin"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#fff" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reviewSaveBtnYes"
                    android:id="@+id/create_tour_save_btn"
                    android:layout_marginRight="@dimen/button_topbottom_margin"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reviewSaveBtnNo"
                    android:id="@+id/create_tour_clear_btn"
                    android:layout_column="2"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </TableRow>

        </TableLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView6"
            android:src="@drawable/logo"
            android:scaleType="fitStart" />

    </LinearLayout>
    </ScrollView>

